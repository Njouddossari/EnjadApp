<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.enjad.LoginActivity"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp">

    <include
        android:id="@+id/include"
        layout="@layout/shared_design"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_height="0dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/Passwordet"
        app:layout_constraintRight_toRightOf="@+id/loginbu"
        tools:layout_constraintLeft_creator="1"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@+id/Passwordet"
        app:layout_constraintLeft_toRightOf="@+id/loginbu" />

    <TextView
        android:id="@+id/emailTV"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="@string/email"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorPrimaryRed"
        android:textSize="22sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/emailET"
        android:layout_marginEnd="35dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="29dp"
        android:layout_marginRight="35dp" />


    <EditText
        android:id="@+id/emailET"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:layout_marginBottom="72dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/edittext_design"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimaryBlack"
        app:layout_constraintBottom_toTopOf="@+id/Passwordet"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginStart="40dp" />

    <TextView
        android:id="@+id/passwrdtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="48dp"
        android:layout_marginTop="84dp"
        android:text="@string/Password"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorPrimaryRed"
        android:textSize="22sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailTV"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginEnd="48dp" />

    <EditText
        android:id="@+id/Passwordet"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="284dp"
        android:background="@drawable/edittext_design"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/colorPrimaryBlack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="40dp" />


    <Button
        android:id="@+id/loginbu"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_desing"
        android:onClick="loginonclick"
        android:text="@string/login"
        android:theme="@style/ButtonText"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="85dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="36dp" />

</android.support.constraint.ConstraintLayout>
