<?xml version="1.0" encoding="utf-8"?>

<!--  rounded_edit text design -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <gradient
                android:centerY="0.2"
                android:startColor="@color/whitetext"
                android:centerColor="#65FFFFFF"
                android:endColor="@color/whitetext"
                android:angle="270"
                />
            <corners
                android:radius="3dp" />
            <size
                android:width="30dp"
                android:height="10dp"/>
        </shape>
    </item>
</selector>