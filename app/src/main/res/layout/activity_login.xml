<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.enjad.LoginActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <include
        android:id="@+id/include"
        layout="@layout/shared_design"
        android:layout_width="410dp"
        android:layout_height="615dp"
        app:layout_constraintBottom_toTopOf="@+id/Passwordet"
        app:layout_constraintLeft_toRightOf="@+id/loginbu"
        app:layout_constraintRight_toRightOf="@+id/loginbu"
        app:layout_constraintTop_toTopOf="@+id/Passwordet"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />


    <EditText
        android:id="@+id/emailET"
        android:layout_width="218dp"
        android:layout_height="47dp"
        android:layout_marginBottom="44dp"
        android:layout_marginLeft="64dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimaryBlack"
        app:layout_constraintBottom_toTopOf="@+id/Passwordet"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <EditText
        android:id="@+id/Passwordet"
        android:layout_width="216dp"
        android:layout_height="48dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="284dp"
        android:ems="10"
        android:gravity="end"
        android:hint="@string/Password"
        android:inputType="textPassword"
        android:textAlignment="textEnd"
        android:textColor="@color/colorPrimaryBlack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />
    <!--android:background="@drawable/edittext_design" (for rounded textedit field) -->


    <Button
        android:id="@+id/loginbu"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="44dp"
        android:background="@drawable/button_desing"
        android:onClick="loginonclick"
        android:text="@string/login"
        android:theme="@style/ButtonText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="54dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/email"
        tools:layout_editor_absoluteX="296dp"
        tools:layout_editor_absoluteY="186dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="56dp"
        android:layout_height="53dp"
        app:srcCompat="@drawable/pw"
        tools:layout_editor_absoluteX="296dp"
        tools:layout_editor_absoluteY="284dp" />

</android.support.constraint.ConstraintLayout>
