<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.enjad.ProfileActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <include
        layout="@layout/shared_design"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints"/>
    <TextView
        android:id="@+id/usernametv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="اسم المستخدم:"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryRed"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/emailtv"
        android:layout_marginStart="5dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="13dp"
        app:layout_constraintLeft_toLeftOf="@+id/emailtv"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/emailtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryRed"
        android:layout_marginEnd="1dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/healthctv"
        app:layout_constraintRight_toRightOf="@+id/healthctv"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="36sp"
        android:textColor="@color/colorPrimaryBlack"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="13dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView5" />

    <TextView
        android:id="@+id/healthctv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_healthcondition"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryRed"
        android:layout_marginEnd="15dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="136dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="15dp" />

    <Switch
        android:id="@+id/providehelpSW"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginBottom="47dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="51dp"
        android:checked="false"
        android:gravity="end"
        android:splitTrack="false"
        android:text="@string/providehelp"
        android:textAlignment="viewEnd"
        android:textColor="@color/colorPrimaryRed"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/accesstocontctSW"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/accesstocontctSW"
        app:layout_constraintRight_toRightOf="@+id/accesstocontctSW"
        app:layout_constraintTop_toBottomOf="@+id/passwrdtv"
        app:layout_constraintVertical_bias="0.864"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/passwrdtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Password"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryRed"
        android:layout_marginEnd="18dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/healthctv"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/healthctv"
        android:layout_marginRight="18dp" />

    <Switch
        android:id="@+id/accesstocontctSW"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginBottom="130dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="129dp"
        android:text="@string/accessTocontact"
        android:textColor="@color/colorPrimaryRed"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/savechngeBU"
        app:layout_constraintLeft_toLeftOf="@+id/accesstomicSW"
        app:layout_constraintRight_toRightOf="@+id/accesstomicSW"
        app:layout_constraintTop_toBottomOf="@+id/healthctv"
        app:layout_constraintVertical_bias="0.735"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"  />

    <!-- to be deleted? --> <Switch
        android:id="@+id/accesstomicSW"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:text="@string/accessToMIC"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryRed"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/savechngeBU"
        app:layout_constraintRight_toRightOf="@+id/healthctv"
        android:layout_marginTop="49dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="31dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/accesstocontctSW"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <Button
        android:id="@+id/savechngeBU"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:background="@drawable/button_desing"
        android:text="@string/savechenges"
        android:theme="@style/ButtonText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        app:layout_constraintRight_toRightOf="@+id/passwrdtv"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

</android.support.constraint.ConstraintLayout>
