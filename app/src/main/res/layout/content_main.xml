<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="290dp"
    android:layout_height="450dp"
    android:layout_marginTop="100dp"
    android:layout_gravity="center"
    android:background="@drawable/reportlistlayout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.ReportlistActivity"
    tools:showIn="@layout/activity_reportlist">



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:layout_marginTop="50dp"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/selectall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:backgroundTint="@color/whitetext"
        android:gravity="right"
        android:text="تحديد الكل"
        android:visibility="visible"
        android:textColor="@color/whitetext"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/norport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/selectall"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:visibility="invisible"
        android:text="لا يوجد بلاغات"
        android:textColor="@color/whitetext"
        android:textSize="20dp" />

</RelativeLayout>
